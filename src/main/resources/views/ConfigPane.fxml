         <children>
            <ImageView fx:id="imgIcon" fitHeight="44.0" fitWidth="49.0" layoutX="7.0" layoutY="2.0" pickOnBounds="true" preserveRatio="true" styleClass="icono-imagen">
               <image>
                  <Image url="@../images/icons/dashboard/configuration_black.png" />
               </image>
            </ImageView>
         </children>
      </Pane>

    </children>
