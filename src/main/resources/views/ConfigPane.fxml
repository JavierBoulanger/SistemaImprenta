                <TextField fx:id="txtDireccion" layoutX="172.0" layoutY="129.0" prefWidth="600.0" />
                <Button fx:id="btnGuardarDatos" layoutX="796.0" layoutY="128.0" styleClass="clear" text="Guardar Datos" />
