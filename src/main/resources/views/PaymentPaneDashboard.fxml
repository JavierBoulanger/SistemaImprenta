<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="560" prefWidth="1010" styleClass="pagos-root" stylesheets="@css/styleTest.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pe.edu.utp.sistemaimprenta.controller.PaymentController">

    <VBox spacing="20" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

        <HBox spacing="10">
            <ImageView fitHeight="40" fitWidth="40">
		<image>
                  <Image url="@../images/icons/lupa.png" />
               </image>
            </ImageView>
            <VBox spacing="3">
                <Label styleClass="title" text="Panel de Pagos" />
            </VBox>
        </HBox>

        <HBox spacing="20">
            <VBox alignment="CENTER">
                <Label styleClass="card-title" text="Total Ingresos (Mes)" />
                <Label fx:id="lblTotalIngresos" styleClass="card-monto" text="S/ 0.00" />
            <styleClass>
               <String fx:value="card-resumen" />
               <String fx:value="card-verde" />
            </styleClass>
            </VBox>

            <VBox alignment="CENTER">
                <Label styleClass="card-title" text="Pagos Pendientes" />
                <Label fx:id="lblPagosPendientes" styleClass="card-monto" text="0" />
            <styleClass>
               <String fx:value="card-resumen" />
               <String fx:value="card-amarillo" />
            </styleClass>
            </VBox>

            <VBox alignment="CENTER">
                <Label styleClass="card-title" text="Pagos Completados" />
                <Label fx:id="lblPagosCompletados" styleClass="card-monto" text="0" />
            <styleClass>
               <String fx:value="card-resumen" />
               <String fx:value="card-azul" />
            </styleClass>
            </VBox>
        </HBox>

        <HBox spacing="10" styleClass="filtro-bar">
            <Button fx:id="btnFiltroTodos" styleClass="filtro-btn" text="Todos" />
            <Button fx:id="btnFiltroCompletados" styleClass="filtro-btn" text="Completados" />
            <Button fx:id="btnFiltroPendientes" styleClass="filtro-btn" text="Pendientes" />
        </HBox>

        <ScrollPane fx:id="scrollPagos" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
            <VBox fx:id="listaPagos" styleClass="lista-pagos">
               
            </VBox>
        </ScrollPane>
    </VBox>
</AnchorPane>
